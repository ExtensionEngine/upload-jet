{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": true,
    "baseUrl": "./",
    "noImplicitAny": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
