{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "paths": {
      "#/*": ["./src/*"],
      "@/types": ["./src/types.ts"]
    },
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["src/App.vue", "src/main.ts"],
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "src/types.ts",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/*.d.ts",
    "src/types.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
